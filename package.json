{
  "name": "real-simple-template",
  "version": "1.0.2",
  "description": "A simple template engine",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.es.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "unpkg": "dist/index.umd.js",
  "types": "dist/index.es.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "dev": "vitest --watch",
    "build": "tsc && vite build",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "format": "prettier --write '{src,test}/**/*.{ts,js}'",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "author": "fooyun <fooyun.code@outlook.com>",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/fooyun/simple-template.git"
  },
  "homepage": "https://github.com/fooyun/simple-template",
  "bugs": {
    "url": "https://github.com/fooyun/simple-template/issues"
  },
  "license": "Apache-2.0",
  "keywords": [
    "template",
    "template-engine",
    "simple-template"
  ],
  "lint-staged": {
    "*.{ts,js}": "prettier --write"
  }
}